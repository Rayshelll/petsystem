<%- include header %>

<div class="context1 clearfix" style="width: 1000px;">
    <div>
        <p class="lostp">宠物走失消息</p>
        <% posts.forEach(function (post, index)  { %>
        <div style="font-size: 16px;">
            <div>
                <a href="/lostdetail/<%= post._id%>">
                <p class="lostp1"><%= post.title %></p></a>
            </div>
            <div style="float: right; width: 90px"><p>[<%= post.time.day %>]</p></div>
        </div>
        <% }) %>
    </div>
    <div class="fen1">
        <% if (!isFirstPage) { %>
        <a href="?p=<%= 1 %>" title="">首 页</a>/
        <a href="?p=<%= page-1 %>" title="上一页">上一页</a>/
        <% } %>
        <% if (!isLastPage) { %>
        <a href="?p=<%= page+1 %>" title="下一页">下一页</a>/
        <a href="?p=<%= Math.ceil(total/10) %>">末 页</a>
        <% } %>
        <span>第<%= page %>页/共<%= Math.ceil(total/10) %>页</span>
    </div>
</div>
<%- include footer_h %>