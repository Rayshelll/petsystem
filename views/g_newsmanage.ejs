<%- include index %>
        <table width="700" border="0" cellpadding="0" cellspacing="0" id="mytable"> 
            <thead>
                <tr align="center" valign="middle">
                    <td colspan="4" class="tt"><%= title %></td>
                <tr>
                <tr align="center" valign="middle"> 
                    <td>标题</td>   
                    <td>发布时间</td>
                    <td>发布者</td>
                    <td>维护操作</td> 
                </tr> 
            </thead> 
        <tbody id="group_one">
            <% newposts.forEach(function (newpost, index) { %>    
            <tr align="center" valign="middle"> 
                <td><%= newpost.title %></td> 
                <td><%= newpost.time.minute %></td> 
                <td><%= user.name %></td> 
                <td><a href="/delete/e/<%= newpost._id%>">删除</a></td>
            </tr> 
            <% }) %>
        </tbody> 
    </table> 
        
	<div class="fen">
        <% if (!isFirstPage) { %>
        <a href="?p=<%= 1 %>" title="">首 页</a>/
        <a href="?p=<%= page-1 %>" title="上一页">上一页</a>/
        <% } %>
        <% if (!isLastPage) { %>
        <a href="?p=<%= page+1 %>" title="下一页">下一页</a>/
        <a href="?p=<%= Math.ceil(total/8) %>">末 页</a>
        <% } %>
        <span>第<%= page %>页/共<%= Math.ceil(total/8) %>页</span>
    </div>          
     
</div>
</body>
</html>