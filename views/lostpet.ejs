<%- include g_header %>
<div class="context1">
    <div class="left" style="margin-top:50px;">
        <ul>
            <li><a href="/addpet">录入宠物信息</a></li>
            <li><a href="/post">发布宠物走失信息</a></li>
            <li><a href="/managepet">管理领养宠物信息</a></li>
            <li><a href="/lostpet">管理走失宠物消息</a></li>
        </ul>   
    </div>
        <table width="700" border="0" cellpadding="0" cellspacing="0" id="mytable"> 
            <thead>
                <tr align="center" valign="middle">
                    <td colspan="6" class="tt"><%= title %></td>
                <tr>
                <tr align="center" valign="middle"> 
                    <td>标题</td>   
                    <td>走失时间</td>
                    <td>联系电话</td>
                    <td>内容</td>
                    <td>发布时间</td>
                    <td>维护操作</td> 
                </tr> 
            </thead> 
        <tbody id="group_one">
            <% posts.forEach(function (post, index) { %>    
            <tr align="center" valign="middle"> 
                <td><%= post.title %></td> 
                <td><%= post.losttime %></td> 
                <td><%= post.phone %></td> 
                <td><%= post.post %></td>
                <td><%= post.time.minute %></td> 
                <td><a href="/delete/a/<%= post._id%>">删除</a></td>
            </tr> 
            <% }) %>
            <tr align="center" valign="middle">
                <td colspan="8"><a href="#">删除</a></td>
            </tr> 
        </tbody> 
    </table> 
        

    <div class="fen">
        <% if (!isFirstPage) { %>
        <a href="?p=<%= 1 %>" title="">首 页</a>/
        <a href="?p=<%= page-1 %>" title="上一页">上一页</a>/
        <% } %>
        <% if (!isLastPage) { %>
        <a href="?p=<%= page+1 %>" title="下一页">下一页</a>/
        <a href="?p=<%= Math.ceil(total/8) %>">末 页</a>
        <% } %>
        <span>第<%= page %>页/共<%= Math.ceil(total/8) %>页</span>
    </div>           
     

</div>  
<%- include footer %>