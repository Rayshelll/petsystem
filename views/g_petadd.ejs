<%- include index %>
 <form name="form3" id="form3" method="post" enctype="multipart/form-data">
            <table border="0" width="100%" cellpadding="0" cellspacing="0" id="senfe">
                <tr align="center" valign="middle">
                    <td colspan="2" class="tt"><%= title %></td>
                </tr>
                <tr align="center" valign="middle">
                    <td width="20%">昵称</td>
                    <td><input class="in" name="name" type="text"></td>
                </tr>
                <tr align="center" valign="middle">
                    <td>种类</td>
                    <td>
                        <input name="category" value="狗" type="radio" value=""/>狗狗
                        <input name="category" value="猫" type="radio" value=""/>猫咪
                    </td>
                </tr>
                <tr align="center" valign="middle">
                    <td>年龄</td>
                    <td><input class="in" name="age" type="text"></td>
                </tr>
                <tr align="center" valign="middle">
                    <td>性别</td>
                    <td>
                    <input name="sex" value="雄性" type="radio" value=""/>雄性
